#!/bin/bash

# Control D Profile Manager - Enhanced with DOH3 Support
# Addresses network hijacking and switching issues
# Now supports both DOH and DOH3 protocols
# Author: Assistant
# Date: 2025-10-07

set -e

# Configuration
CONTROLD_DIR="/etc/controld"
PROFILES_DIR="$CONTROLD_DIR/profiles"
BACKUP_DIR="$CONTROLD_DIR/backup"
LOG_FILE="/var/log/controld_manager.log"

# Profile configurations with protocol preferences
get_profile_id() {
    case "$1" in
        "privacy") echo "6m971e9jaf" ;;
        "gaming") echo "1xfy57w34t7" ;;
        "browsing") echo "rcnz7qgvwg" ;;
        *) echo "" ;;
    esac
}

get_profile_protocol() {
    case "$1" in
        "privacy") echo "doh3" ;;    # Privacy can use DOH3
        "gaming") echo "doh3" ;;     # Gaming can also use DOH3
        "browsing") echo "doh3" ;;   # Browsing can use DOH3
        *) echo "doh" ;;            # Fallback to DOH
    esac
}

get_all_profiles() {
    echo "privacy gaming browsing"
}

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

log() {
    echo -e "${BLUE}[$(date '+%Y-%m-%d %H:%M:%S')]${NC} $1"
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] $1" >> "$LOG_FILE" 2>/dev/null || true
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1" >&2
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] ERROR: $1" >> "$LOG_FILE" 2>/dev/null || true
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] SUCCESS: $1" >> "$LOG_FILE" 2>/dev/null || true
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] WARNING: $1" >> "$LOG_FILE" 2>/dev/null || true
}

# Check if we're running as root
check_root() {
    if [[ $EUID -ne 0 ]]; then
        log_error "This script must be run as root. Use: sudo $0"
        exit 1
    fi
}

# Create directory structure
setup_directories() {
    log "Setting up directory structure..."
    mkdir -p "$PROFILES_DIR" "$BACKUP_DIR"
    touch "$LOG_FILE" 2>/dev/null || true
    chmod 666 "$LOG_FILE" 2>/dev/null || true
}

# Backup current network settings
backup_network_settings() {
    log "Backing up current network settings..."
    
    # Backup current DNS servers
    networksetup -getdnsservers Wi-Fi > "$BACKUP_DIR/original_dns.txt" 2>/dev/null || echo "No DNS servers" > "$BACKUP_DIR/original_dns.txt"
    
    # Backup current network configuration
    scutil --dns > "$BACKUP_DIR/dns_config.txt" 2>/dev/null || true
    
    log_success "Network settings backed up"
}

# Restore network settings (emergency recovery)
restore_network_settings() {
    log_warning "Restoring original network settings..."
    
    if [[ -f "$BACKUP_DIR/original_dns.txt" ]]; then
        local original_dns=$(cat "$BACKUP_DIR/original_dns.txt")
        if [[ "$original_dns" == "No DNS servers" ]] || [[ "$original_dns" == "There aren't any DNS Servers set on Wi-Fi." ]]; then
            networksetup -setdnsservers Wi-Fi "Empty"
        else
            # Restore original DNS servers
            while IFS= read -r dns_server; do
                if [[ -n "$dns_server" ]]; then
                    networksetup -setdnsservers Wi-Fi "$dns_server"
                    break
                fi
            done < "$BACKUP_DIR/original_dns.txt"
        fi
    else
        # Fallback to common public DNS servers
        networksetup -setdnsservers Wi-Fi 8.8.8.8 1.1.1.1
    fi
    
    # Flush DNS cache
    dscacheutil -flushcache
    sudo killall -HUP mDNSResponder 2>/dev/null || true
    
    log_success "Network settings restored"
}

# Safe service stop with cleanup
safe_stop() {
    log "Safely stopping Control D service..."
    
    # Stop ctrld service
    ctrld stop 2>/dev/null || true
    
    # Kill any remaining processes
    pkill -f ctrld 2>/dev/null || true
    
    # Wait for processes to fully terminate
    sleep 2
    
    # Verify no ctrld processes are running
    if pgrep -f ctrld >/dev/null; then
        log_warning "Force killing remaining ctrld processes..."
        pkill -9 -f ctrld 2>/dev/null || true
        sleep 1
    fi
    
    # Reset DNS to prevent network hijacking
    restore_network_settings
    
    log_success "Service safely stopped and network restored"
}

# Generate profile configuration with protocol support
generate_profile_config() {
    local profile_name="$1"
    local profile_id="$2"
    local protocol="$3"
    local config_file="$PROFILES_DIR/ctrld.$profile_name.toml"
    
    log "Generating $profile_name profile configuration with $protocol protocol..."
    
    # Generate configuration using ctrld
    TEMP_CONFIG="/tmp/ctrld_temp.toml"
    
    # Start service temporarily to generate config
    if [[ "$protocol" == "doh3" ]]; then
        ctrld start --cd "$profile_id" --proto doh3 --config="$TEMP_CONFIG" --skip_self_checks 2>/dev/null || true
    else
        ctrld start --cd "$profile_id" --config="$TEMP_CONFIG" --skip_self_checks 2>/dev/null || true
    fi
    sleep 2
    ctrld stop 2>/dev/null || true
    
    if [[ -f "$TEMP_CONFIG" ]]; then
        # Copy and customize the generated config
        cp "$TEMP_CONFIG" "$config_file"
        
        # Ensure binding to all interfaces for Windscribe integration
        sed -i '' "s/ip = '127.0.0.1'/ip = '0.0.0.0'/g" "$config_file" 2>/dev/null || true
        
        # Optimize timeout
        sed -i '' "s/timeout = 5000/timeout = 3000/g" "$config_file"
        
        rm -f "$TEMP_CONFIG"
        log_success "$profile_name profile configuration generated with $protocol"
    else
        log_error "Failed to generate $profile_name profile configuration"
        return 1
    fi
}

# Switch profile safely with protocol selection
switch_profile() {
    local profile_name="$1"
    local force_protocol="$2"  # Optional: force specific protocol
    local profile_id=$(get_profile_id "$profile_name")
    local protocol=${force_protocol:-$(get_profile_protocol "$profile_name")}
    local config_file="$PROFILES_DIR/ctrld.$profile_name.toml"
    
    if [[ -z "$profile_id" ]]; then
        log_error "Unknown profile: $profile_name"
        echo "Available profiles: $(get_all_profiles)"
        return 1
    fi
    
    log "Switching to $profile_name profile with $protocol protocol..."
    
    # Safe stop current service
    safe_stop
    
    # Wait for network to stabilize
    sleep 3
    
    # Generate profile config if it doesn't exist or if protocol changed
    if [[ ! -f "$config_file" ]] || ! grep -q "type = '$protocol'" "$config_file" 2>/dev/null; then
        generate_profile_config "$profile_name" "$profile_id" "$protocol"
    fi
    
    # Create symlink to active configuration
    ln -sf "$config_file" "$CONTROLD_DIR/ctrld.toml"
    
    # Start service with the new profile
    log "Starting Control D with $profile_name profile ($protocol)..."
    if [[ "$protocol" == "doh3" ]]; then
        ctrld start --config="$CONTROLD_DIR/ctrld.toml" --skip_self_checks
    else
        ctrld start --config="$CONTROLD_DIR/ctrld.toml" --skip_self_checks
    fi
    
    # Wait for service to initialize
    sleep 3
    
    # Configure system DNS to use localhost
    networksetup -setdnsservers Wi-Fi 127.0.0.1
    
    # Flush DNS cache
    dscacheutil -flushcache
    sudo killall -HUP mDNSResponder 2>/dev/null || true
    
    # Test the connection
    if test_connection; then
        log_success "Successfully switched to $profile_name profile ($protocol)"
        echo
        echo "Profile: $profile_name"
        echo "ID: $profile_id"
        echo "Protocol: $protocol"
        echo "Status: Active"
        return 0
    else
        log_error "Failed to establish connection with $profile_name profile"
        restore_network_settings
        return 1
    fi
}

# Test DNS connection
test_connection() {
    log "Testing DNS connection..."
    
    # Test basic resolution
    if dig @127.0.0.1 google.com +short +time=5 >/dev/null 2>&1; then
        log_success "Basic DNS resolution working"
    else
        log_error "Basic DNS resolution failed"
        return 1
    fi
    
    # Test Control D connectivity
    if dig @127.0.0.1 p.controld.com +short +time=5 >/dev/null 2>&1; then
        log_success "Control D connectivity confirmed"
    else
        log_error "Control D connectivity failed"
        return 1
    fi
    
    # Test filtering (different for gaming vs privacy vs browsing)
    local block_test=$(dig @********* doubleclick.net +short 2>/dev/null | wc -l)
    if [[ "$block_test" -eq 0 ]]; then
        log_success "Filtering is working (ads blocked)"
    elif [[ "$block_test" -gt 0 ]]; then
        if [[ "$profile_name" == "gaming" ]]; then
            log_success "Gaming filtering is working (ads allowed for gaming compatibility)"
        else
            log_warning "Ads are not being blocked - this may be intended for this profile"
        fi
    fi
    
    return 0
}

# Show current status with protocol information
show_status() {
    echo "=== Control D Profile Manager Status ==="
    echo
    
    # Check if service is running
    if pgrep -f ctrld >/dev/null; then
        echo "Service Status: ✅ Running"
        
        # Determine current profile and protocol
        if [[ -L "$CONTROLD_DIR/ctrld.toml" ]]; then
            local current_config=$(readlink "$CONTROLD_DIR/ctrld.toml")
            local profile_name=$(basename "$current_config" | sed 's/ctrld\.\(.*\)\.toml/\1/')
            local protocol=$(grep "type = " "$current_config" 2>/dev/null | sed "s/.*type = '\(.*\)'.*/\1/" || echo "unknown")
            echo "Active Profile: $profile_name"
            echo "Profile ID: $(get_profile_id "$profile_name")"
            echo "Protocol: $protocol"
        else
            echo "Active Profile: Unknown (direct configuration)"
        fi
        
        # Show DNS configuration
        local dns_servers=$(networksetup -getdnsservers Wi-Fi)
        echo "System DNS: $dns_servers"
        
        # Test connection
        if test_connection >/dev/null 2>&1; then
            echo "Connection: ✅ Working"
        else
            echo "Connection: ❌ Issues detected"
        fi
    else
        echo "Service Status: ❌ Stopped"
    fi
    
    echo
    echo "Available Profiles:"
    for profile in $(get_all_profiles); do
        local default_protocol=$(get_profile_protocol "$profile")
        echo "  - $profile ($(get_profile_id "$profile")) - Default: $default_protocol"
    done
    
    echo
    echo "Protocols:"
    echo "  - doh3: DNS-over-HTTPS/3 (QUIC) - Faster, more secure"
    echo "  - doh:  DNS-over-HTTPS (TCP) - Fallback for compatibility"
}

# Emergency recovery
emergency_recovery() {
    log_warning "Performing emergency recovery..."
    
    # Force stop all ctrld processes
    pkill -9 -f ctrld 2>/dev/null || true
    
    # Remove any configurations that might cause issues
    rm -f "$CONTROLD_DIR/ctrld.toml"
    
    # Restore network settings
    restore_network_settings
    
    # Clear any stuck network states
    sudo dscacheutil -flushcache
    sudo killall -HUP mDNSResponder 2>/dev/null || true
    
    # Test network connectivity
    if ping -c 1 8.8.8.8 >/dev/null 2>&1; then
        log_success "Network connectivity restored"
        echo "Emergency recovery completed successfully"
        echo "Your network should now be working normally"
    else
        log_error "Network connectivity still has issues"
        echo "Please restart your router and/or use VPN as fallback"
    fi
}

# Initialize the system
initialize() {
    log "Initializing Control D Profile Manager..."
    
    setup_directories
    backup_network_settings
    
    # Generate configurations for all profiles with their preferred protocols
    for profile in $(get_all_profiles); do
        local profile_id=$(get_profile_id "$profile")
        local protocol=$(get_profile_protocol "$profile")
        generate_profile_config "$profile" "$profile_id" "$protocol"
    done
    
    log_success "Initialization completed"
}

# Main function
main() {
    case "${1:-""}" in
        "init"|"initialize")
            check_root
            initialize
            ;;
        "switch")
            check_root
            if [[ -z "$2" ]]; then
                echo "Usage: $0 switch <profile_name> [protocol]"
                echo "Available profiles: $(get_all_profiles)"
                echo "Available protocols: doh3, doh"
                exit 1
            fi
            switch_profile "$2" "$3"
            ;;
        "status")
            show_status
            ;;
        "stop")
            check_root
            safe_stop
            ;;
        "test")
            test_connection
            ;;
        "emergency"|"recover")
            check_root
            emergency_recovery
            ;;
        *)
            echo "Control D Profile Manager - Enhanced with DOH3 Support"
            echo "Usage: $0 <command> [options]"
            echo
            echo "Commands:"
            echo "  init                         Initialize the profile manager"
            echo "  switch <profile> [protocol]  Switch to profile (gaming/privacy) with optional protocol"
            echo "  status                      Show current status and protocol info"
            echo "  stop                        Safely stop Control D service"
            echo "  test                        Test DNS connection"
            echo "  emergency                   Emergency recovery (restore network)"
            echo
            echo "Available profiles: $(get_all_profiles)"
            echo "Protocols: doh3 (default), doh (fallback)"
            echo
            echo "Examples:"
            echo "  sudo $0 init"
            echo "  sudo $0 switch gaming        # Use default DOH3"
            echo "  sudo $0 switch gaming doh3   # Force DOH3"
            echo "  sudo $0 switch gaming doh    # Force DOH fallback"
            echo "  sudo $0 switch privacy       # Use default DOH3"
            echo "  $0 status"
            echo "  sudo $0 emergency"
            ;;
    esac
}

main "$@"