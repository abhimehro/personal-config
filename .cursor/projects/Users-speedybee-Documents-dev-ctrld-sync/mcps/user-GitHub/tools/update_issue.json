{
  "name": "update_issue",
  "description": "Update an existing issue in a GitHub repository",
  "arguments": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string"
      },
      "repo": {
        "type": "string"
      },
      "issue_number": {
        "type": "number"
      },
      "title": {
        "type": "string"
      },
      "body": {
        "type": "string"
      },
      "assignees": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "milestone": {
        "type": "number"
      },
      "labels": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "state": {
        "type": "string",
        "enum": [
          "open",
          "closed"
        ]
      }
    },
    "required": [
      "owner",
      "repo",
      "issue_number"
    ],
    "additionalProperties": false,
    "$schema": "http://json-schema.org/draft-07/schema#"
  }
}