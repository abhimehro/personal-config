{
  "name": "list_issues",
  "description": "List issues in a GitHub repository with filtering options",
  "arguments": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string"
      },
      "repo": {
        "type": "string"
      },
      "direction": {
        "type": "string",
        "enum": [
          "asc",
          "desc"
        ]
      },
      "labels": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "page": {
        "type": "number"
      },
      "per_page": {
        "type": "number"
      },
      "since": {
        "type": "string"
      },
      "sort": {
        "type": "string",
        "enum": [
          "created",
          "updated",
          "comments"
        ]
      },
      "state": {
        "type": "string",
        "enum": [
          "open",
          "closed",
          "all"
        ]
      }
    },
    "required": [
      "owner",
      "repo"
    ],
    "additionalProperties": false,
    "$schema": "http://json-schema.org/draft-07/schema#"
  }
}