      "owner": {
        "type": "string"
      },
      "repo": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "body": {
        "type": "string"
      },
      "assignees": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "milestone": {
        "type": "number"
      },
      "labels": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": [
