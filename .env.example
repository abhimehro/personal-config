# Email Security Pipeline Configuration Template
# Copy to .env, fill secrets, NEVER commit .env

# === Email Account 1: Gmail ===
GMAIL_ENABLED=true
GMAIL_EMAIL=your-email@gmail.com
GMAIL_IMAP_SERVER=imap.gmail.com
GMAIL_IMAP_PORT=993
GMAIL_SMTP_SERVER=smtp.gmail.com
GMAIL_SMTP_PORT=465
GMAIL_APP_PASSWORD=your-app-password-here
GMAIL_FOLDERS=INBOX,Spam

# === Email Account 2: Outlook ===
# WARNING: Personal Outlook app passwords deprecated; prefer Gmail/Proton.
OUTLOOK_ENABLED=false
OUTLOOK_EMAIL=your-email@outlook.com
OUTLOOK_IMAP_SERVER=outlook.office365.com
OUTLOOK_IMAP_PORT=993
OUTLOOK_SMTP_SERVER=smtp.office365.com
OUTLOOK_SMTP_PORT=587
OUTLOOK_APP_PASSWORD=your-app-password-here
OUTLOOK_FOLDERS=INBOX,Junk

# === Email Account 3: Proton Mail via Bridge ===
# Bridge IMAP usually on 127.0.0.1:143 (or 1143 if STARTTLS); SMTP 1025.
PROTON_ENABLED=false
PROTON_EMAIL=your-email@pm.me
PROTON_IMAP_SERVER=127.0.0.1
PROTON_IMAP_PORT=143
PROTON_SMTP_SERVER=127.0.0.1
PROTON_SMTP_PORT=1025
PROTON_APP_PASSWORD=your-bridge-password-here
PROTON_FOLDERS=INBOX,Spam

# === Analysis Configuration ===
SPAM_THRESHOLD=5.0
SPAM_CHECK_HEADERS=true
SPAM_CHECK_URLS=true
NLP_MODEL=distilbert-base-uncased
NLP_THRESHOLD=0.7
NLP_BATCH_SIZE=8
CHECK_SOCIAL_ENGINEERING=true
CHECK_URGENCY_MARKERS=true
CHECK_AUTHORITY_IMPERSONATION=true
CHECK_MEDIA_ATTACHMENTS=true
DEEPFAKE_DETECTION_ENABLED=true
MEDIA_ANALYSIS_TIMEOUT=60

# === Alert Configuration ===
ALERT_CONSOLE=true
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
THREAT_LOW=30
THREAT_MEDIUM=60
THREAT_HIGH=80

# === System Configuration ===
LOG_LEVEL=INFO
LOG_FILE=logs/email_security.log
CHECK_INTERVAL=300
MAX_EMAILS_PER_BATCH=50
RATE_LIMIT_DELAY=1
MAX_ATTACHMENT_SIZE_MB=25

# === Database (Optional) ===
DATABASE_ENABLED=false
DATABASE_PATH=data/email_analysis.db
